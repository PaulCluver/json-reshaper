{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": 0,
        "no-param-reassign": 0,
        "no-undef": 0,
        "import/no-extraneous-dependencies": [
            "error", 
            {
                "devDependencies": false, 
                "optionalDependencies": false, 
                "peerDependencies": false
            }
        ]
    }
}
